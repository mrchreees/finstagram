<!doctype html>
<html>
    <head>
        <link rel="stylesheet" href="/stylesheets/normalize.css">
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto+Condensed:300italic,700italic,300,700">
        <link rel="stylesheet" href="/stylesheets/lib.css">
        <link rel="stylesheet" href="/stylesheets/app.css">
        <title>Walkengram</title>
    </head>
    <body>
        <header>
            <h1>
                <a href="/">Walkengram</a>
            </h1>
            <div class="login-info">
                <% if current_user %>
                    <%= current_user.username %>
                    <a href="/logout">Logout</a>
                <% else %>
                    <a href="/login">Login</a>
                    <a href="/signup">Signup</a>
                <% end %>
            </div>
        </header>
        <main role="main">
          <%= yield %>  
        </main>
    </body>
</html>